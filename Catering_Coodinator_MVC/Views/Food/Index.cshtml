@model IEnumerable<CateringCoordinator.Models.FoodModels.FoodListItem>

@{
    ViewBag.Title = "Index";
}
<body class="body-food" id="food">
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<h2><strong>List of Food Items</strong></h2>

<p>
    @Html.ActionLink("Create New Food Item", "Create", "",new { @class = "btn btn-primary" })
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Allergens)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servings)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Allergens)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Servings)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.FoodId }, new { @class = "btn btn-warning" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.FoodId }, new { @class = "btn btn-success" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.FoodId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    </body>